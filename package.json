{
	"name": "escape-game",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"init:db": "node script/init-db.js",
		"dev": "node backend/server.js",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"dev:server": "nodemon --watch backend --exec \"node backend/server.js\"",
		"dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
		"start": "NODE_ENV=production node backend/server.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"concurrently": "^9.2.1",
		"nodemon": "^3.1.10",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7"
	},
	"dependencies": {
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-rate-limit": "^8.1.0",
		"fs": "^0.0.1-security",
		"helmet": "^8.1.0",
		"mysql2": "^3.15.1",
		"sirv": "^3.0.2"
	}
}
